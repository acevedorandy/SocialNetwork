@model SocialNetwork.Application.Model.ViewModel.PublicacionesViewModel

@{
    ViewData["Title"] = "Editar Publicación";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Editar Publicación</h1>
    <hr class="my-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">

                <form asp-action="Edit" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" name="PublicacionID" value="@Model.PublicacionID" />

                <input type="hidden" name="UsuarioID" value="UsuarioID" />

                <div class="form-group">
                    <label asp-for="Contenido" class="control-label h5 text-dark">Contenido</label>
                    <textarea asp-for="Contenido" class="form-control bg-light border-primary" rows="4" placeholder="Escribe aquí el contenido de la publicación"></textarea>
                    <span asp-validation-for="Contenido" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="File" class="form-label">Foto de perfil</label>
                    <input asp-for="File" type="file" class="form-control" />
                </div>

                <input type="hidden" asp-for="Imagen" value="@Model.Imagen" />

                <div class="form-group">
                    <label asp-for="Video" class="control-label h5 text-dark">Video (opcional)</label>
                    <input asp-for="Video" class="form-control bg-light border-warning" placeholder="Enlace del video (URL)" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Volver al listado</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
