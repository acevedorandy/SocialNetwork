@using SocialNetwork.Application.Dtos.identity.account;
@model ForgotPasswordDto
@{
    ViewData["Title"] = "Olvidé contraseña";
}

<style>
    html, body {
        height: 100%;
        overflow: hidden;
    }
</style>

<div class="full-background">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4 text-center animate-card">
            <div class="card-header bg-dark text-light py-4">
                <img src="~/images/logo/ghost.png" alt="Logo" class="img-fluid rounded-circle mb-3" style="max-width: 120px;" />
                <h4 class="mb-0">Restablecer contraseña</h4>
            </div>
            <div class="card-body p-4">
                @if (Model.HasError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form method="post" asp-controller="Usuarios" asp-action="ForgotPassword" novalidate>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">📧 Correo:</label>
                        <input asp-for="Email" class="form-control rounded-3 shadow-sm" placeholder="Ingresa tu correo electrónico" data-val="false" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg rounded-3">Enviar</button>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-dark rounded-3">⬅️ Volver atrás</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


<style>
    /* Ocupa toda la pantalla y quita scroll */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    /* Fondo uniforme sin franjas blancas */
    .full-background {
        width: 100%;
        height: 100vh;
        background: #1a2a41; /* Color azul oscuro */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Efecto de zoom */
    .animate-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .animate-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
        }
</style>
